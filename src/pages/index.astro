---
import Layout from '../layouts/Layout.astro';

const pageTitle = "StakeWise Tactics - Home";
const pageDescription = "Discover strategic insights and expert analysis to elevate your football betting game with StakeWise Tactics.";

const features = [
  {
    icon: "fa-chart-line",
    title: "Expert Analysis",
    description: "Dive deep into team formations, player stats, and match dynamics with our professional breakdowns."
  },
  {
    icon: "fa-trophy",
    title: "Proven Strategies",
    description: "Learn battle-tested betting tactics tailored for major leagues like the Premier League, La Liga, and Champions League."
  },
  {
    icon: "fa-bolt",
    title: "Real-Time Insights",
    description: "Stay ahead with live updates, injury reports, and predictive models."
  }
];

const testimonials = [
  {
    name: "Michael Rodriguez",
    role: "Professional Gambler",
    content: "StakeWise Tactics transformed my betting approach. The data-driven insights are unmatched."
  },
  {
    name: "Sarah Johnson",
    role: "Sports Analyst",
    content: "The tactical breakdowns help me understand game dynamics I would have missed otherwise."
  },
  {
    name: "David Chen",
    role: "Betting Enthusiast",
    content: "Consistent profits since implementing their strategies. Worth every penny."
  }
];
---

<Layout title={pageTitle} description={pageDescription}>
  <!-- Hero Section -->
  <section class="relative bg-gradient-to-br from-primary to-[#0d2a1b] py-20 md:py-32 overflow-hidden">
    <div class="absolute inset-0 z-0">
      <div class="absolute top-0 left-0 w-full h-full bg-[radial-gradient(ellipse_at_center,_var(--tw-gradient-stops))] from-primary/20 via-transparent to-transparent"></div>
    </div>
    
    <div class="container mx-auto px-4 relative z-10">
      <div class="max-w-4xl mx-auto text-center">
        <div class="inline-block px-4 py-1 mb-4 bg-accent/20 rounded-full border border-accent/30">
          <span class="text-accent font-medium">Premium Football Analytics</span>
        </div>
        <h1 class="text-4xl md:text-6xl font-bold text-white mb-6 leading-tight">
          Strategic Insights for <span class="text-accent">Smarter</span> Football Betting
        </h1>
        <p class="text-xl text-gray-200 mb-10 max-w-2xl mx-auto">
          Elevate your betting game with expert analysis, data-driven strategies, and tactical insights for the world's most popular sport.
        </p>
        <div class="flex flex-col sm:flex-row justify-center gap-4">
          <button class="px-8 py-4 bg-accent text-primary font-bold rounded-lg hover:bg-yellow-500 transition-all duration-300 transform hover:-translate-y-1 shadow-lg hover:shadow-xl">
            Start Free Trial
          </button>
          <button class="px-8 py-4 bg-transparent text-white font-bold rounded-lg border-2 border-white/30 hover:bg-white/10 transition-all duration-300">
            View Strategies
          </button>
        </div>
      </div>
    </div>
  </section>

  <!-- Features Section -->
  <section class="py-20 bg-gray-50">
    <div class="container mx-auto px-4">
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-4xl font-bold text-primary mb-4">Why Choose StakeWise Tactics?</h2>
        <div class="w-24 h-1 bg-accent mx-auto"></div>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        {features.map((feature, index) => (
          <div key={index} class="bg-white p-8 rounded-xl shadow-lg hover:shadow-xl transition-shadow duration-300 border border-gray-100">
            <div class="w-16 h-16 rounded-full bg-primary/10 flex items-center justify-center mb-6">
              <i class={`fas ${feature.icon} text-2xl text-accent`}></i>
            </div>
            <h3 class="text-xl font-bold text-primary mb-3">{feature.title}</h3>
            <p class="text-gray-600">{feature.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Stats Section -->
  <section class="py-20 bg-primary">
    <div class="container mx-auto px-4">
      <div class="grid grid-cols-2 md:grid-cols-4 gap-8 text-center">
        <div>
          <div class="text-4xl md:text-5xl font-bold text-white mb-2">98%</div>
          <div class="text-gray-200">Accuracy Rate</div>
        </div>
        <div>
          <div class="text-4xl md:text-5xl font-bold text-white mb-2">15K+</div>
          <div class="text-gray-200">Active Members</div>
        </div>
        <div>
          <div class="text-4xl md:text-5xl font-bold text-white mb-2">85%</div>
          <div class="text-gray-200">Profit Growth</div>
        </div>
        <div>
          <div class="text-4xl md:text-5xl font-bold text-white mb-2">24/7</div>
          <div class="text-gray-200">Support Available</div>
        </div>
      </div>
    </div>
  </section>

  <!-- Testimonials -->
  <section class="py-20 bg-white">
    <div class="container mx-auto px-4">
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-4xl font-bold text-primary mb-4">What Our Members Say</h2>
        <div class="w-24 h-1 bg-accent mx-auto"></div>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        {testimonials.map((testimonial, index) => (
          <div key={index} class="bg-gray-50 p-8 rounded-xl border border-gray-100">
            <div class="flex items-center mb-6">
              <div class="w-12 h-12 rounded-full bg-primary/10 flex items-center justify-center mr-4">
                <i class="fas fa-user text-accent"></i>
              </div>
              <div>
                <h4 class="font-bold text-primary">{testimonial.name}</h4>
                <p class="text-gray-600 text-sm">{testimonial.role}</p>
              </div>
            </div>
            <p class="text-gray-700 italic">"{testimonial.content}"</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-20 bg-gradient-to-r from-primary to-[#0d2a1b]">
    <div class="container mx-auto px-4">
      <div class="max-w-3xl mx-auto text-center">
        <h2 class="text-3xl md:text-4xl font-bold text-white mb-6">Ready to Elevate Your Betting Game?</h2>
        <p class="text-xl text-gray-200 mb-10">
          Join thousands of successful bettors who trust StakeWise Tactics for their strategic edge.
        </p>
        <div class="flex flex-col sm:flex-row justify-center gap-4">
          <button class="px-8 py-4 bg-accent text-primary font-bold rounded-lg hover:bg-yellow-500 transition-all duration-300 transform hover:-translate-y-1 shadow-lg hover:shadow-xl">
            Get Started Today
          </button>
          <button class="px-8 py-4 bg-transparent text-white font-bold rounded-lg border-2 border-white/30 hover:bg-white/10 transition-all duration-300">
            Schedule Demo
          </button>
        </div>
      </div>
    </div>
  </section>

  <!-- Footer Highlight -->
  <footer class="py-12 bg-gray-900 text-white">
    <div class="container mx-auto px-4 text-center">
      <h3 class="text-2xl font-bold mb-4">StakeWise Tactics</h3>
      <p class="text-gray-400 max-w-2xl mx-auto">
        Strategic insights for smarter football betting. Professional analysis, proven techniques, and real-time data to boost your profits.
      </p>
      <div class="mt-8 flex justify-center space-x-6">
        <a href="#" class="text-gray-400 hover:text-white transition-colors">
          <i class="fab fa-twitter"></i>
        </a>
        <a href="#" class="text-gray-400 hover:text-white transition-colors">
          <i class="fab fa-facebook-f"></i>
        </a>
        <a href="#" class="text-gray-400 hover:text-white transition-colors">
          <i class="fab fa-instagram"></i>
        </a>
        <a href="#" class="text-gray-400 hover:text-white transition-colors">
          <i class="fab fa-linkedin-in"></i>
        </a>
      </div>
    </div>
  </footer>
</Layout>

<style>
  @import url('https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css');
  
  .hero-pattern {
    background: radial-gradient(circle at center, rgba(26, 76, 46, 0.3) 0%, rgba(13, 42, 27, 0.7) 100%);
  }
  
  .feature-card {
    transition: all 0.3s ease;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.05);
  }
  
  .feature-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
  }
  
  .stat-number {
    font-weight: 700;
  }
  
  .gradient-border {
    position: relative;
    border-radius: 12px;
  }
  
  .gradient-border::before {
    content: '';
    position: absolute;
    top: -2px;
    left: -2px;
    right: -2px;
    bottom: -2px;
    background: linear-gradient(45deg, #e6b800, #1a4c2e, #e6b800);
    border-radius: inherit;
    z-index: -1;
    animation: gradientShift 3s ease infinite;
    background-size: 200% 200%;
  }
  
  @keyframes gradientShift {
    0% { background-position: 0% 50%; }
    50% { background-position: 100% 50%; }
    100% { background-position: 0% 50%; }
  }
</style>