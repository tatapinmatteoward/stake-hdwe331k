---
import Layout from '../layouts/Layout.astro';

const pageTitle = "About StakeWise Tactics";
const pageDescription = "Discover the story behind StakeWise Tactics, your go-to source for strategic insights and smarter football betting decisions. We empower bettors with data-driven tactics and expert analysis.";
const features = [
  {
    title: "In-Depth Tactical Analysis",
    description: "Comprehensive breakdowns of team strategies, formations, and player roles"
  },
  {
    title: "Data-Driven Predictions",
    description: "Advanced analytics and statistical models for informed betting decisions"
  },
  {
    title: "Expert Betting Strategies",
    description: "Proven methodologies for maximizing your betting potential"
  },
  {
    title: "Real-Time Market Insights",
    description: "Live updates and market trends to stay ahead of the competition"
  }
];
const teamMembers = [
  {
    name: "Alex Morgan",
    role: "Head Analyst",
    bio: "Former professional footballer turned data scientist with 12 years of tactical expertise."
  },
  {
    name: "Sarah Chen",
    role: "Betting Strategist",
    bio: "Mathematics graduate specializing in probability modeling and risk assessment."
  },
  {
    name: "David Rodriguez",
    role: "Performance Director",
    bio: "Former sports journalist with deep insights into player psychology and team dynamics."
  }
];
---

<Layout title={pageTitle} description={pageDescription}>
  <!-- Hero Section -->
  <section class="relative bg-gradient-to-br from-primary to-[#0d2a1a] text-white py-24 md:py-32 overflow-hidden">
    <div class="absolute inset-0 z-0">
      <div class="absolute top-0 left-0 w-full h-full bg-[radial-gradient(ellipse_at_center,_var(--tw-gradient-stops))] from-primary/20 via-transparent to-transparent"></div>
    </div>
    <div class="container mx-auto px-4 relative z-10">
      <div class="max-w-4xl mx-auto text-center">
        <h1 class="text-4xl md:text-6xl font-bold mb-6 tracking-tight">About StakeWise Tactics</h1>
        <p class="text-xl md:text-2xl text-accent/90 font-light mb-10">Strategic Insights for Smarter Football Betting</p>
        <div class="w-24 h-1 bg-accent mx-auto mb-8 rounded-full"></div>
        <p class="text-lg md:text-xl max-w-3xl mx-auto leading-relaxed">
          Discover the story behind our mission to transform football betting through data-driven intelligence and tactical expertise.
        </p>
      </div>
    </div>
  </section>

  <!-- Story Section -->
  <section class="py-20 bg-gray-50">
    <div class="container mx-auto px-4">
      <div class="flex flex-col md:flex-row items-center gap-12">
        <div class="md:w-1/2">
          <div class="relative">
            <div class="w-full h-96 bg-gradient-to-br from-primary to-[#0d2a1a] rounded-2xl shadow-xl"></div>
            <div class="absolute -bottom-6 -right-6 w-32 h-32 bg-accent rounded-2xl shadow-2xl"></div>
          </div>
        </div>
        <div class="md:w-1/2">
          <h2 class="text-3xl font-bold text-primary mb-6">Our Story</h2>
          <p class="text-gray-700 mb-6 leading-relaxed">
            Founded by a team of passionate football analysts and betting experts, StakeWise Tactics emerged from a shared frustration with the randomness of traditional betting advice. We set out to create a platform that combines cutting-edge data analytics, tactical breakdowns, and real-world betting strategies.
          </p>
          <p class="text-gray-700 mb-8 leading-relaxed">
            Whether you're a casual punter or a seasoned bettor, our goal is to level the playing field by providing actionable intelligence that transforms guessing into calculated decisions.
          </p>
          <div class="flex items-center space-x-4">
            <div class="w-16 h-16 rounded-full bg-primary flex items-center justify-center">
              <i class="fas fa-bullseye text-white text-2xl"></i>
            </div>
            <div>
              <h3 class="font-bold text-lg text-primary">Mission</h3>
              <p class="text-gray-600">Empowering bettors with strategic advantages</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Features Section -->
  <section class="py-20 bg-white">
    <div class="container mx-auto px-4">
      <div class="text-center mb-16">
        <h2 class="text-3xl font-bold text-primary mb-4">What We Offer</h2>
        <div class="w-24 h-1 bg-accent mx-auto"></div>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
        {features.map((feature, index) => (
          <div key={index} class="bg-gradient-to-br from-white to-gray-50 p-6 rounded-2xl shadow-lg border border-gray-100 hover:shadow-xl transition-all duration-300 transform hover:-translate-y-2">
            <div class="w-14 h-14 rounded-full bg-primary/10 flex items-center justify-center mb-5">
              <i class="fas fa-chart-line text-primary text-xl"></i>
            </div>
            <h3 class="text-xl font-bold text-primary mb-3">{feature.title}</h3>
            <p class="text-gray-600">{feature.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Team Section -->
  <section class="py-20 bg-gradient-to-br from-[#f0f7f4] to-[#e0f0ea]">
    <div class="container mx-auto px-4">
      <div class="text-center mb-16">
        <h2 class="text-3xl font-bold text-primary mb-4">Meet Our Team</h2>
        <p class="text-gray-600 max-w-2xl mx-auto">Experts who blend passion for football with analytical precision</p>
        <div class="w-24 h-1 bg-accent mx-auto mt-4"></div>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        {teamMembers.map((member, index) => (
          <div key={index} class="bg-white rounded-2xl overflow-hidden shadow-lg hover:shadow-xl transition-all duration-300">
            <div class="h-48 bg-gradient-to-r from-primary to-[#0d2a1a] relative">
              <div class="absolute bottom-0 left-0 right-0 bg-black/20 h-16 flex items-center justify-center">
                <div class="w-16 h-16 rounded-full bg-white flex items-center justify-center">
                  <i class="fas fa-user text-primary text-2xl"></i>
                </div>
              </div>
            </div>
            <div class="p-6">
              <h3 class="text-xl font-bold text-primary mb-1">{member.name}</h3>
              <p class="text-accent font-medium mb-4">{member.role}</p>
              <p class="text-gray-600">{member.bio}</p>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-20 bg-gradient-to-r from-primary to-[#0d2a1a] text-white">
    <div class="container mx-auto px-4 text-center">
      <h2 class="text-3xl md:text-4xl font-bold mb-6">Ready to Transform Your Betting Strategy?</h2>
      <p class="text-xl text-accent/90 max-w-3xl mx-auto mb-10">
        Join thousands of bettors who trust StakeWise Tactics for their tactical edge
      </p>
      <div class="flex flex-col sm:flex-row justify-center gap-4">
        <button class="px-8 py-4 bg-accent text-primary font-bold rounded-full hover:bg-yellow-500 transition-colors duration-300 shadow-lg">
          Start Your Journey
        </button>
        <button class="px-8 py-4 bg-transparent border-2 border-white text-white font-bold rounded-full hover:bg-white/10 transition-colors duration-300">
          Explore Resources
        </button>
      </div>
    </div>
  </section>
</Layout>

<style>
  @keyframes float {
    0% { transform: translateY(0px); }
    50% { transform: translateY(-10px); }
    100% { transform: translateY(0px); }
  }
  
  .floating {
    animation: float 6s ease-in-out infinite;
  }
  
  .gradient-border {
    position: relative;
    border-radius: 16px;
  }
  
  .gradient-border::before {
    content: '';
    position: absolute;
    top: -2px;
    left: -2px;
    right: -2px;
    bottom: -2px;
    background: linear-gradient(45deg, #1a4c2e, #e6b800, #1a4c2e);
    border-radius: 18px;
    z-index: -1;
    animation: gradientShift 3s linear infinite;
  }
  
  @keyframes gradientShift {
    0% { background-position: 0% 50%; }
    50% { background-position: 100% 50%; }
    100% { background-position: 0% 50%; }
  }
</style>