---
// Frontmatter
const currentYear = new Date().getFullYear();
const socialLinks = [
  { icon: 'fab fa-twitter', url: '#' },
  { icon: 'fab fa-linkedin', url: '#' },
  { icon: 'fab fa-github', url: '#' },
  { icon: 'fab fa-discord', url: '#' }
];
---

<footer class="bg-[#1a4c2e] text-white py-8 border-t border-[#e6b800]">
  <div class="container mx-auto px-4">
    <div class="flex flex-col md:flex-row justify-between items-center">
      <div class="mb-4 md:mb-0">
        <p class="text-lg font-medium">StakeWise Tactics</p>
        <p class="text-sm opacity-75 mt-1">&copy; {currentYear} StakeWise Tactics. All rights reserved.</p>
      </div>
      
      <div class="flex space-x-4">
        {socialLinks.map((link, index) => (
          <a 
            href={link.url} 
            key={index}
            class="w-10 h-10 flex items-center justify-center rounded-full bg-[#e6b800] text-[#1a4c2e] hover:bg-opacity-90 transition-all duration-300 transform hover:scale-110"
            aria-label={`Follow us on ${link.icon.split('-')[2]}`}
          >
            <i class={link.icon}></i>
          </a>
        ))}
      </div>
    </div>
    
    <div class="border-t border-[#e6b800] mt-6 pt-6 text-center">
      <p class="text-sm opacity-75">
        Tactical solutions for decentralized finance infrastructure
      </p>
    </div>
  </div>
</footer>